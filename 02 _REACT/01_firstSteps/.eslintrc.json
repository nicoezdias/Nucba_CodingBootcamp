{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "prettier"
    ],
    "plugins": ["react","import","jsx-a11y"],
    "rules": {
       "react/prop-types":0, // Para validar tipos de datos usar Typescript
       "no-console":1           //Warning
    },
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "settings": {
        "react":{
            "version": "detect"
        }
    } 
}